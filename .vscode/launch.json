{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Mat Api", "React Frontend"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Mat Api",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/Mat.Api/Mat.csproj"
    },
    {
      "name": "React Frontend",
      "command": "powershell -Command \"Start-Sleep -Seconds 2; npm run dev\"", // start backend first to hide errors
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/Mat.Frontend"
    }
  ]
}
